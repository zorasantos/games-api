{
  "name": "games-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn lint --fix",
      "yarn test --findRelatedTests"
    ]
  },
  "scripts": {
    "postinstall": "yarn prisma:generate",
    "start": "node dist/src/shared/infra/http/server.js",
    "build": "tsc",
    "dev": "tsnd --inspect -r tsconfig-paths/register --exit-child --transpile-only --respawn --ignore-watch node_modules src/shared/infra/http/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "jest --detectOpenHandles --forceExit ",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "celebrate": "^15.0.1",
    "cross-env": "^7.0.3",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "pg": "^8.7.3",
    "prisma": "^3.15.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "tsyringe": "^4.6.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/eslint-plugin": "^7.16.5",
    "@jest-mock/express": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.6",
    "lint-staged": "^13.0.2",
    "prettier": "^2.5.1",
    "sonarqube-scanner": "^2.8.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.5.5"
  }
}
